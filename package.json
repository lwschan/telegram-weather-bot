{
  "name": "telegram-weather-bot",
  "version": "0.0.1",
  "description": "A weather bot for Telegram.",
  "author": {
    "name": "Lewis Chan"
  },
  "homepage": "https://github.com/lwschan/telegram-weather-bot#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/lwschan/telegram-weather-bot.git"
  },
  "license": "MIT",
  "keywords": [
    "Telegram Weather Bot",
    "Das Wetter Bot"
  ],
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "debug": "NODE_ENV=development nodemon --no-warnings --loader ts-node/esm ./src/index.ts",
    "prettier": "prettier --config .prettierrc.json --write \"src/**/*{.ts,.js}\"",
    "start": "NODE_ENV=production node --experimental-specifier-resolution=node ./build/index.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "redis": "^4.6.11",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.10.1",
    "@types/node-telegram-bot-api": "0.63.3",
    "@types/text-table": "0.2.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "3.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "yarn@4.0.2",
  "nodemonConfig": {
    "delay": 1500,
    "execMap": {
      "ts": "node"
    }
  }
}
